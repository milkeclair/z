{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2024",
    "lib": ["es2024"],
    "outDir": "dist",
    "rootDir": "src",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "composite": true,
    "sourceMap": true
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
